<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddNoteActivity">

    <TextView
        android:id="@+id/txtAddNote"
        android:text="@string/addNote"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/primary"
        android:textSize="25sp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/ivAddNote"
        android:src="@drawable/ic_check"
        android:layout_alignTop="@+id/txtAddNote"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddNote"
        android:layout_marginTop="15dp"
        android:padding="10dp">

    <EditText
        android:id="@+id/txtTitle"
        android:hint="@string/txtTitle"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilTitle"
        android:layout_marginTop="10dp"
        android:padding="10dp">

    <EditText
        android:id="@+id/txtDescription"
        android:hint="@string/txtDescription"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>